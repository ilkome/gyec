	.criterion.js-menu-watch#criterion
		.criterion-in
			h2.s-title Judging and Criteria
			.criterion-content
				mixin criterion-el(num, text)
					.criterion-el
						.criterion-num
							.criterion-num-in= num
						.criterion-text= text
				+criterion-el("I", "The judging for this competition will take place in two stages. The first stage is where all submissions are initially assessed by a panel of academics drawn from universities around the UK as well as by judges.")
				+criterion-el("II", "From the first stage, there will be a shortlist of highly commended submissions that will subsequently be judged by the chief judging panel. The exact composition of this panel is still to be confirmed.")
				+criterion-el("III", "All submissions will be judged anonymously to ensure that all candidates are assessed on the merit of their work and on no other criteria.")
				+criterion-el("IV", "Substantively, there is no marking scheme that submissions will be judged by. However, as a rough guide for students, judges are looking for submissions that distinguish themselves according to their.")
	
	.judges
		.judges-in
			h2.s-title.s-title_black Judges
			.judges-content
				mixin judges-el(pic, firstName, lastName, jobName, jobDesc)
					.judges-el
						.judges-pic: img(src="img/judges-#{pic}.png", alt="")
						.judges-box
							.judges-name
								| #{firstName}
								span #{lastName}
							.judges-job
								| #{jobName}
								span #{jobDesc}
				+judges-el("1", "Elliott", "Wilkinson", "Union Place Lt", "Top-manager")
				+judges-el("2", "Daniel", "Simons", "Design Academics", "Project-manager")
				+judges-el("3", "Sofia", "Mitchell", "Loft CO", "Commercial director")

