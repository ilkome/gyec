// ===============================================
// contacts
// ===============================================
.contacts
	background #1a50b8 url("../img/bg-contacts.jpg") center center no-repeat
	//bgcover()
	
	&-in
		width 530px
		margin 0 auto
		padding-top 100px
		padding-bottom 40px
		text-align center
	
	&-content
		padding-bottom 140px
		
	&-el
