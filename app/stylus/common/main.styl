// ===============================================
// main
// ===============================================
.s-title
	margin-bottom 100px
	color white
	font-family fontPlayfairDisplay
	font-size 40px
	font-weight 400
	line-height 30px
	text-align center
	
	&_black
		color black
		
	&_short
		margin-bottom 40px
	
	&_middle
		margin-bottom 70px

.l-left:hover
	.l-menu-text
		opacity 1
		right 30px
	
	.l-logo-text
		opacity 1
		right 30px

.l-menu
	display block
	lino()
	margin-left 55px
	
	li
		position relative
		
		&.is-active
			.l-menu-bg
				background #144fff !important
			.l-menu-text
				color white

		&:hover
			.l-menu-bg
				background white
			.l-menu-text
				color white
	a
		display block
		padding-bottom 32px
		tdn()
		

	&-bg
		display inline-block
		margin 0 auto
		width 8px
		height 8px
		background #383937
		border-radius 5px
		line-height 500px
		anim-all()
	
	&-text
		width 100px
		opacity 0
		position absolute
		right -500px
		top 0px
		color white
		font-family fontLato
		font-size 17px
		text-align right
		color #4f4f4f
		anim-all()
		
		@media big-screen
			opacity 1
			right 30px

// ===============================================
// about
// ===============================================
.about
	background #222b3b url("../img/bg-about.jpg") center top no-repeat
	bgcover()
	
	&-in
		width 860px
		margin 0 auto
		padding-top 260px
		padding-bottom 225px
		text-align center
		color c-white
	
	&-text
		position relative
		padding-bottom 1px
		color white
		font-family fontLato
		font-size 20px
		font-weight 400
		line-height 30px
		
		p
			position relative
			margin-bottom 30px
			
		&:after
			content " "
			position absolute
			left 50%
			bottom 0px
			width 50px
			height 2px
			margin-left -25px
			background #144fff


// ===============================================
// requir
// ===============================================
.requir
	background #1a50b8 url("../img/bg-requir.jpg") center bottom no-repeat
	bgcover()
	
	&-in
		margin 0 auto
		padding-top 110px
		padding-bottom 80px
		text-align center
	
	&-inin
		width 900px
		margin 0 auto
		border 20px solid alpha(#000, .05)
	
	&-ininin
		width 480px
		margin 0 auto
		margin-top -33px
	
	&-el
		position relative
		margin-bottom 40px
		padding-bottom 20px
		color white
		font-size 17px
		line-height 30px
		font-family fontLato
		font-weight 400
		
		&:last-child
			margin-bottom 0
			&:after
				display none

		&:after
			content " "
			position absolute
			left 50%
			bottom 0px
			width 50px
			height 2px
			margin-left -25px
			background #e7c43a


// ===============================================
// tabsbox
// ===============================================
.tabsbox
	&-in
		table()
		width 1080px
		margin 0 auto
		padding 100px 0
	
	&-content
		table()
		
	&-left
		tablecell()
		width 365px
		padding-top 10px
		
	&-nav
		lino()
		width 275px
		padding 150px 0px 30px 0px
		background #242424 url("../img/logo-b.png") 40px -34px no-repeat
		
		&-el
			position relative
			
			a
				display block
				padding 0 40px
				color #5c5c5c
				font-family fontLato
				font-size 17px
				font-weight 400
				line-height 40px
				tdn()
				anim-all()
				
				&:hover
					color c-white
			
			&.is-active
				a
					border-right 5px solid #144fff
					color c-white
	
	&-list
		lino()
		padding-bottom 10px
		
		li.tabsbox-list-title
			margin-bottom 45px
			color #242424
			font-family fontPlayfairDisplay
			font-size 24px
			font-weight 700
			line-height 30px
		
		li
			margin-bottom 30px
			color #495055
			font-family fontLato
			font-size 17px
			font-weight 400
			line-height 30px
			
			span
				display inline-block
				width 55px
	
	&-text
		padding-top 10px
		
		h3
			margin-bottom 50px
			color #242424
			font-family fontPlayfairDisplay
			font-size 24px
			font-weight 700
			line-height 30px
		
		h4
			margin-bottom 35px
			color #242424
			font-family fontPlayfairDisplay
			font-size 22px
			line-height 27px
		
		p
			margin-bottom 30px
			color #495055
			font-family fontLato
			font-size 17px
			line-height 30px


// ===============================================
// criterion
// ===============================================
.criterion
	background #303030 url("../img/bg-criterion.jpg") center top no-repeat
	bgcover()

	&-in
		width 1080px
		margin 0 auto
		padding-top 130px
		padding-bottom 30px
		text-align center
		color c-white
	
	&-content
		wrap()
		gutter(20px)
	
	&-el
		col(2,1)
		padding-bottom 90px
	
	&-num
		position relative
		margin-bottom 25px
		color white
		font-family fontPlayfairDisplay
		font-size 48px
		font-weight 400
		line-height 30px
		
		&:after
			content " "
			position absolute
			left 50%
			top 55%
			width 70px
			height 2px
			margin-left -35px
			background-color #495055
		
		&-in
			position relative
			z-index 2

	&-text
		color white
		font-family fontLato
		font-size 17px
		font-weight 400
		line-height 30px


// ===============================================
// Judges
// ===============================================
.judges
	&-in
		width 1080px
		margin 0 auto
		padding 100px 0
		text-align center

	&-content
		wrap()
		gutter(10px)
	
	&-el
		col(3,1)
		
	&-pic
		tablecell(c)
		width 154px
		height 154px
		border 2px solid #e6e6e6
		border-radius 50%
	
	&-box
		tablecell(c)
		padding-left 30px
		text-align left
	
	&-name
		padding-bottom 15px
		color #242424
		font-family fontPlayfairDisplay
		font-size 25px
		font-weight 400
		line-height 25px
		
		span
			padding-top 5px
			display block
			font-weight 700
	&-job
		color #495055
		font-family fontLato
		font-size 16px
		font-weight 400
		
		span
			padding-top 0px
			display block
			color #1b54c1
			font-family fontPlayfairDisplay
			font-size 16px
			font-style italic
			line-height 25px


// ===============================================
// awards
// ===============================================
.awards
	background #eaeaea url("../img/bg-awards.jpg") center top no-repeat
	bgcover()
	
	&-in
		width 1080px
		margin 0 auto 
		padding 140px 0
		text-align center
	
	&-content
		wrap()
		gutter(15px)
	
	&-el
		col(3,1)
		
		&_gold
			.awards-el-in
				background #242424 url("../img/awards-gold.png") center top no-repeat
		&_silver
			.awards-el-in
				background #242424 url("../img/awards-silver.png") center top no-repeat
		&_bronze
			.awards-el-in
				background #242424 url("../img/awards-bronze.png") center top no-repeat
		
		&-in
			padding 90px 55px
			padding-bottom 50px
			color c-white
	
	&-small
		margin-bottom 2px
		font-family fontLato
		font-size 17px
		font-weight 400
		line-height 30px
		
	&-price
		margin-bottom 5px
		font-family fontPlayfairDisplay
		font-size 22px
		font-weight 900
		line-height 45px
		
		span
			font-size 30px
			font-weight 700


// ===============================================
// partners
