// ===============================================
// Colors
// ===============================================
c-white = #fff
white = #fff

// ===============================================
// Fonts
// ===============================================
fontinputs()
	color white
	font-family fontLato
	font-size 20px
	font-weight 400
	line-height 30px

fontform()
	color white
	font-family fontPlayfairDisplay
	font-size 19px
	font-weight 400
	line-height 30px
	text-transform uppercase


// ===============================================
//	#list
// ===============================================
ul
	margin 0 0 30px 5px
	li
		margin 0 0 10px 15px
		list-style disc outside
		ul, ol
			margin 15px 0 10px 0
ol
	margin 0 0 15px 0
	li
		margin 0 0 15px 15px
		list-style decimal inside
		ul, ol
			margin 15px 0 10px 0
.no-list-style 
	margin 0
	li
		margin-left 0
		list-style-type none



// ===============================================
//	#text
// ===============================================
p
	margin-bottom 20px



// ===============================================
//	#table
// ===============================================
table
	width 100%
	td
		vertical-align top