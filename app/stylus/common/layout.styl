reset-all()
borderbox-all()

html
	height 100%

.page-body
	height 100%
	background #fff

.ilkome
	table()
	position relative
	height 100%
	min-width 1366px

.wrap
	position relative
	max-width 1200px
	margin 0 auto
	
.l-left
	tablecell()
	position relative
	width 120px
	height 100%
	background #1a1a1a
	text-align left
	
	@media big-screen
		width 245px
		.l-left-in
			width 245px

	&-in
		position relative
		overflow hidden
		position fixed
		z-index 2
		left 0
		top 0
		width 115px
		height 100%
		padding-top 33px
		background #1a1a1a
		anim()

.l-left:hover, .l-left.is-visible
	.l-left-in
		width 245px

.l-logo
	display inline-block
	margin-left 30px
	margin-bottom 145px
	width 53px
	height 63px
	background url("../img/logo.png") no-repeat

.l-logo-text
	opacity 0
	position absolute
	right -200px
	top 40px
	width 103px
	height 48px
	background url("../img/logo-text.png") no-repeat
	anim-all()
	
	@media big-screen
		opacity 1
		right 30px

.l-content
	tablecell()
	height 100%