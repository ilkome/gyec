label, input, button, select, textarea
	fontinputs()


// ===============================================
//	#input
// ===============================================
input
	width 100%
	padding 13px 20px
	text-align center
	background none
	border-bottom 2px solid alpha(white, .3)
	anim()
	&:hover
		border-color alpha(white, .5)
	&:focus
		border-color white
	&.error
		//
	&.valid
		//


// ===============================================
//	#submit
// ===============================================
input[type="submit"]
	fontform()
	width auto
	padding 15px 70px
	letter-spacing 3px
	background none
	border 2px solid alpha(white, .3)
	cursor pointer
	anim()
	
	&:hover
		border-color alpha(white, .5)


// ===============================================
//	#select
// ===============================================
select
	width auto
	margin-bottom 10px
	padding 4px 10px
	full()
	background #fff
	border 1px solid #c8d9eb
	color #819397
	font-size 16px
	option
		padding 5px 10px
select.full
	width 100%


// ===============================================
//	#textarea
// ===============================================
textarea
	width 238px
	max-width 100%
	height 200px
	margin-bottom 10px
	padding 10px 10px
	full()
	background #fff
	border 1px solid #c8d9eb
	anim()
	&:hover
	&:focus
		background #f4f9ff
textarea.full
	width 100%


// ===============================================
//	#radio
// ===============================================
input[type="radio"] + label 
	cursor:pointer
	margin:0px 20px 0px 0
	font-form()

input[type="radio"] + label::before 
	content " "
	display inline-block
	height 18px
	width 18px
	margin 0 10px -3px 0px
	background url("../img/radio.png") no-repeat;

input[type="radio"]
	display:none

input[type="radio"]:disabled + label 
	cursor:default

input[type="radio"] + label:hover::before
	background-position 0px 0px

input[type="radio"]:checked + label::before 
	background-position 0 -18px

input[type="radio"]:disabled + label::before 
	background-position:0px 0px
	opacity .8

input[type="radio"]:checked:disabled + label::before 
	background-position 0px -18px
	opacity .8



// ===============================================
//	#checkbox
// ===============================================
input[type="checkbox"]
	width 21px
	height 21px
	margin 0 3px 0 0
	vertical-align top

input[type="checkbox"]
	& + label
		cursor pointer

	&:not(checked)
		position absolute
		opacity 0

		& + label
			position relative
			display inline-block
			padding 0 0 0 35px
			font-size 14px

		& + label:after
			content ''
			position absolute
			top -3px
			left 0px
			width 21px
			height 21px
			background url("../img/checkbox-b.png") no-repeat

	&:checked
		
		& + label:after
			background-position 0 -21px
		
		& + label:before
			position relative